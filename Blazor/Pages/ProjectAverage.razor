@page "/project-average"

<PageTitle>Average</PageTitle>
<h1 class="display-3 align-items-center">Average and Closest to Average</h1>

<div class="row my-1 align-items-center">
    <div class="col-8">
        <input type="number" class="form-control" @bind="num1" placeholder="Enter number 1" />
    </div>
</div>
<div class="row my-1 align-items-center">
    <div class="col-8">
        <input type="number" class="form-control" @bind="num2" placeholder="Enter number 2" />
    </div>
</div>
<div class="row my-1 align-items-center">
    <div class="col-8">
        <input type="number" class="form-control" @bind="num3" placeholder="Enter number 3" />
    </div>
</div>
<div class="row my-1 align-items-center">
    <div class="col-8">
        <input type="number" class="form-control" @bind="num4" placeholder="Enter number 4" />
    </div>
</div>
<div class="row my-1 align-items-center">
    <div class="col-8">
        <input type="number" class="form-control" @bind="num5" placeholder="Enter number 5" />
    </div>
</div>


<div class="row my-1 align-items-center">
    <div class="col-6">
        <button class="btn btn-warning" @onclick="CalculateAverage">Calculate Average</button>
    </div>
    <div class="col-6 align-items-center">
        Average: @average
    </div>
</div>


<div class="row my-1 align-items-center">
    <div class="col-6">
        <button class="btn btn-success" @onclick="ClosestToAverage">Closest to average</button>
    </div>
    <div class="col-6 align-items-center">
        Closest to average: @closestNumber
    </div>
</div>

<div class="row my-1 align-items-center">
    <div class="col-6">
        <button class="btn btn-primary" @onclick="FarestFromAverage">Farest from average</button>
    </div>
    <div class="col-6 align-items-center">
        Farest from average: @farestNumber
    </div>
</div>

@code {
    double num1, num2, num3, num4, num5;
    double average;

    void CalculateAverage()
    {
        average = (num1 + num2 + num3 + num4 + num5) / 5;
    }
    double closestNumber;

    void ClosestToAverage()
    {
        double[] numbers5 = { num1, num2, num3, num4, num5 };
        double minDiff = double.MaxValue;
        {
            for (int i = 0; i < numbers5.Length; i++)
            {
                double diff = Math.Abs(average - numbers5[i]);
                if (diff < minDiff)
                {
                    minDiff = diff;
                    closestNumber = numbers5[i];
                }
            }
        }
    }
    double farestNumber;

    void FarestFromAverage()
    {
        double[] numbers5 = { num1, num2, num3, num4, num5 };
        double maxDiff = double.MinValue;
        {
            for (int i = 0; i < numbers5.Length; i++)
            {
                double diff = Math.Abs(average - numbers5[i]);
                if (diff > maxDiff)
                {
                    maxDiff = diff;
                    farestNumber = numbers5[i];
                }
            }
        }
    }
}