@page "/project-average"

<PageTitle>Average</PageTitle>
<h1 class="display-3 align-items-center">Average</h1>

<div class="row my-1 align-items-center">
    <div class="col-6">
        <input type="number" class="form-control" @bind="num1" placeholder="Enter number 1" />
    </div>
</div>
<div class="row my-1 align-items-center">
    <div class="col-6">
        <input type="number" class="form-control" @bind="num2" placeholder="Enter number 2" />
    </div>
</div>
<div class="row my-1 align-items-center">
    <div class="col-6">
        <input type="number" class="form-control" @bind="num3" placeholder="Enter number 3" />
    </div>
</div>
<div class="row my-1 align-items-center">
    <div class="col-6">
        <input type="number" class="form-control" @bind="num4" placeholder="Enter number 4" />
    </div>
</div>
<div class="row my-1 align-items-center">
    <div class="col-6">
        <input type="number" class="form-control" @bind="num5" placeholder="Enter number 5" />
    </div>
</div>


<div class="row my-1 align-items-center">
    <div class="col-6">
        <button class="btn btn-warning" @onclick="CalculateAverage">Calculate Average</button>
    </div>
    <div class="col-6 align-items-center">
        Average: @average
    </div>
</div>

@code {
    double num1 = 0;
    double num2 = 0;
    double num3 = 0;
    double num4 = 0;
    double num5 = 0;
    double average = 0;
    void CalculateAverage()
    {
        average = (num1 + num2 + num3 + num4 + num5) / 5;
    }
}