@page "/factoriel-functions"

<PageTitle>Factoriel</PageTitle>
<h1 class="display-2">Factoriel</h1>

<div class="row my-1 align-items-center">
    <div class="col-4">
        <input type="number" class="form-control" @bind="n" placeholder="Enter n" />
    </div>
    <div class="col-4">
        <button class="btn btn-primary w-10" @onclick="FactorielF1">Factoriel</button>
    </div>
    <div class="col-4 align-items-center">
        Result: @result
    </div>
</div>

@code
{
    uint n = 1;
    ulong result = 1;
    void FactorielF1()
    {
        Console.WriteLine(n);
        result = CalculateFactoriel(n);
        Console.WriteLine(result);
    }
    ulong CalculateFactoriel(uint nn)
    {
        ulong ret = 1;
        for (uint counter = 1; counter <= nn; counter++)
            ret *= counter;
        return ret;
    }
}