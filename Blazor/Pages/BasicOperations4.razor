@page "/basic-operations-4"
@using Microsoft.AspNetCore.Mvc

<PageTitle>Basic operations</PageTitle>

<h1 class="display-1">Basic Operations</h1>

<div class="row">
    <div class="column">
        <label for="argument1">First one:</label>
        <input type="text" class="form-control" id="argument1" placeholder="Enter first argument" @bind="argument1" />
    </div>

    <div class="column">
        <label for="argument2">Second one:</label>
        <input type="text" class="form-control" id="argument2" placeholder="Enter second argument" @bind="argument2" />
    </div>
</div>

<div class="row">
    <div class="col mb-3">
        <label for="operation">Operation:</label>
        <select class="form-control" id="operation" @bind="operation">
            <option value="add">Addition (+)</option>
            <option value="subtract">Subtraction (-)</option>
            <option value="multiply">Multiplication (x)</option>
            <option value="divide">Division (/)</option>
            <option value="power">Power to (**)</option>
        </select>
        </div>
    </div>

    <div class="row">
        <div class="d-flex justify-content-center">
            <button class="btn btn-primary mx-2 my-2" @onclick="DoTheOperation">Execute!</button>
        </div>
    </div>

    <div class="row">
        <div class="column">
            <label for="result">Result:</label>
            <input type="text" class="form-control" id="result" placeholder="Result" @bind="result" />
        </div>
    </div>

@code {

    double argument1;
    double argument2;
    double result;
    string operation = "add";

    void DoTheOperation()
    {
        Console.WriteLine(value: "I am alive!");
        Console.WriteLine(operation);

        switch(operation)
        {
            case "add":
                result = argument1 + argument2;
                break;
            case "subtract":
                result = argument1 - argument2;
                break;
            case "multiply":
                result =argument1 * argument2;
                break;break;
            case "divide":
                result = argument1 / argument2;
                break;
            case "power":
                result = Math.Pow(argument1, argument2);
                break;
            default:
                Console.WriteLine("Error: Incorrect operation");
                result = double.NaN;
                break;
        }
        
    }
}